<!DOCTYPE html>
<html>
<%- include('./head') %>
<%- include('./body') %>

<div class="wrapper">

  <%- include('./header') %>
  <%- include('./main-sidebar') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        <%= title %>
        <small>List of organizations you belong to</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Catalogs</li>
      </ol>
    </section>

    <!-- Main content -->

    <section class="content container-fluid">

      <!-- Info boxes -->
      <div class="row">
        <!-- <div class="col-md-3 col-sm-6 col-xs-12"> -->
        <div class="col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-aqua"><i class="ion ion-ios-bookmarks"></i></span>

            <div class="info-box-content">
              <div class="inner">
                <h4><%= items[0].catalogName %></h4>
                <p><%= items[0].description %>
              </p></div>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
      </div>


      <!-- title row -->
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Catalob Products</h3>
            </div>
            <!-- PRODUCT LIST -->
            <!-- /.box-header -->
            <div class="box-body">
              <ul class="products-list product-list-in-box">

                <% for (let i=0; i<items.length; i++) { %>
                <li class="item">
                  <div class="product-img">
                    <img src="/img/nttpc-logo.png" alt="Product Image">
                  </div>
                  <div class="product-info">
                    <a href="javascript:void(0)" class="product-title"><%= items[i].myProducts.brand %> - <%= items[i].myProducts.service %> <%= items[i].myProducts.plan %> <%= items[i].myProducts.course %> <%= items[i].myProducts.type %>
                      <span class="label label-warning pull-right"><%= items[i].products.catalogPrice.initial %></span></a>
                    <span class="product-description">
                          <%= items[i].myProducts.description %>
                        </span>
                  </div>
                </li>
                <!-- /.item -->
                <% } %>

              </ul>
            </div>
            <!-- /.box-body -->
            <div class="box-footer text-center">
              <a href="javascript:void(0)" class="uppercase">View All Products</a>
            </div>
            <!-- /.box-footer -->

          </div>
          <!-- /.box -->
        </dev>
      </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include('./footer') %>
  <%- include('./control-sidebar') %>

</div>
<!-- ./wrapper -->

<%- include('./script') %>

<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. -->
</body>
</html>
