<!DOCTYPE html>
<html>
<%- include('./head') %>
<%- include('./body') %>

<div class="wrapper">

  <%- include('./header') %>
  <%- include('./main-sidebar') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        <%= title %>
        <small>List of organizations you belong to</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Create Org</li>
      </ol>
    </section>

    <!-- Main content -->

    <section class="content container-fluid">
      <!-- title row -->
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary"> 
            <div class="box-header with-border">
              <h3 class="box-title"><%= subtitle %></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <form role="form" action="/create-org" method="post">
                <div class="input-group">
                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-info">Create</button>
                  </div>
                  <!-- /btn-group -->
                  <input type="text" class="form-control" name="orgName" placeholder="Organization Name">
                </div>
              </form>
              <!-- /.box-body -->

            </div>
          </div>
          <!-- /.box -->
        </dev>
      </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include('./footer') %>
  <%- include('./control-sidebar') %>

</div>
<!-- ./wrapper -->

<%- include('./script') %>

<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. -->
</body>
</html>
